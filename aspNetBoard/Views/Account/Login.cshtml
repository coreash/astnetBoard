@model aspNetBoard.ViewModel.LoginViewModel
<h2>Login</h2>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label>아이디</label>
        <input type="text" class="form-control" asp-for="UserId" placeholder="아이디" />
        <span class="text-danger" asp-validation-for="UserId"></span>
    </div>
    <div class="form-group">
        <label>비밀번호</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="비밀번호" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <button class="btn btn-success">로그인</button>
    </div>
</form>